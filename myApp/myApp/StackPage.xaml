<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="myApp.StackPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0, 20, 0, 0" />
            <On Platform="Android" Value="0, 0, 0, 0" />
        </OnPlatform>
    </ContentPage.Padding>
<StackLayout 
    Padding="20, 20, 20, 20" 
    Spacing="3"
    Orientation="Vertical"
    VerticalOptions="EndAndExpand"
    BackgroundColor="Goldenrod">
        <Grid
        BackgroundColor="Azure"
        RowSpacing="30"
        ColumnSpacing="30">
            <Label Grid.Row="0" Grid.Column="0" Text="label1" BackgroundColor="Chartreuse" />
            <Label Grid.Row="1" Grid.Column="0" Text="label2" BackgroundColor="Chartreuse"/>
            <Label Grid.Row="0" Grid.Column="1" Text="label3" BackgroundColor="Chartreuse"/>
            <Label Grid.Row="1" Grid.Column="1" Text="label4" BackgroundColor="Chartreuse"/>
        </Grid>
    </StackLayout>
</ContentPage>