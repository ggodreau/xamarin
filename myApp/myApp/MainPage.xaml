<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:myApp"
             x:Class="myApp.MainPage">

    <StackLayout x:Name="myStack">
        <Label x:Name="myLabel" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
        <Entry IsPassword="False" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Placeholder="notpassword, chat" Keyboard="Chat" />
        <Entry IsPassword="False" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Placeholder="notpassword, numeric" Keyboard="Numeric" />
        <Entry IsPassword="False" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Placeholder="notpassword, plain" Keyboard="Plain" />
        <Entry IsPassword="True" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Placeholder="yespassword" TextChanged="Entry_TextChanged" Completed="Entry_Completed" BackgroundColor="LightSkyBlue" />
        <Editor Completed="editCompleted" />
    </StackLayout>

</ContentPage>
