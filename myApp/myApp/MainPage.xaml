<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:myApp"
             x:Class="myApp.MainPage"
             BackgroundColor="Black">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="Black">
        <Switch IsToggled="False" x:Name="keySwitch" BackgroundColor="IndianRed" Toggled="Switch_Toggled" />
        <Switch IsToggled="False" Scale="2" 
                BackgroundColor="GreenYellow" 
                IsVisible="{Binding Source={x:Reference keySwitch}, Path=IsToggled}" />
        <Switch IsToggled="False" Rotation="270" Scale="3" BackgroundColor="DarkGray" Margin="0, 100, 0, 0" />
    </StackLayout>
</ContentPage>
